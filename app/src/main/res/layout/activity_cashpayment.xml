<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cashpayment">

        <ImageView
            android:layout_width="600dp"
            android:layout_height="160dp"
            android:id="@+id/pageabove"
            android:background="@drawable/uii"
            ></ImageView>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation1"
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:layout_marginLeft="200dp"

            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation3"></com.airbnb.lottie.LottieAnimationView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@id/pageabove"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="15dp"

            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:text="PAYMENT DETAILS"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="Accepted Card"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/visa"

            ></ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/credit"

            ></ImageView>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/mastercard1"

            ></ImageView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="Credit Card Number"></TextView>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/shapebox"

            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="Exp Month"></TextView>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/shapebox"

            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="Expiry Year"></TextView>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/shapebox"

            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:text="CCV"></TextView>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:elevation="2dp"
            android:background="@drawable/shapebox"

            ></ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#efcc00"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
    android:id="@+id/send"
            android:text="PLACE order"
            android:layout_centerHorizontal="true"

            />

    </LinearLayout>

</RelativeLayout>