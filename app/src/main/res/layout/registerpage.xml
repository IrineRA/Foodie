<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:background="@drawable/op0"></ImageView>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                 Register    "
            android:layout_margin="3dp"
            android:textColor="#CC0000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="24dp"></TextView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="@drawable/logo09"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:background="@drawable/green">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/email"></ImageView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Email id                                       "
            android:id="@+id/email6"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="1dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:background="@drawable/green">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/password"></ImageView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Password                        "
            android:textSize="13sp"
            android:id="@+id/password6"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:layout_margin="2dp"></EditText>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"

            android:layout_gravity="center"
            android:id="@+id/eyeicon6"></ImageView>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:textSize="13sp"
        android:layout_gravity="center"></TextView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Login"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:id="@+id/login2"
        android:layout_margin="20dp"
        android:background="@drawable/darkgreen"
        android:textColor="@color/white"
        android:textSize="14dp"></androidx.appcompat.widget.AppCompatButton>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#D26466"
            android:layout_margin="2dp"
            android:textSize="13sp"
            android:layout_gravity="center"></TextView><TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#cc0000"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="center"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="On continue with"
        android:textSize="14dp"
        android:textColor="#D26466"
        android:layout_gravity="center"></TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="@drawable/circle">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
android:id="@+id/google1"
                android:background="@drawable/google"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         "></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="@drawable/circle">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:background="@drawable/facebook"></ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="         "></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_margin="6dp"
            android:padding="10dp"
            android:background="@drawable/circle">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/twitt"></ImageView>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>