<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cartview">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="130dp"
            android:background="@drawable/add1"></ImageView>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/designc">

        <TextView
            android:layout_width="wrap_content"
        android:padding="2dp"
            android:textColor="@color/white"
            android:text="   My Cart    "
            android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:elevation="8dp"
            android:layout_margin="5dp"
            android:background="@drawable/white8"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:elevation="15dp"
                android:layout_height="wrap_content"

               >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="125dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/m121"
                    android:elevation="2dp"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginTop="3dp"
        android:text="AMBUR BRIYANI  "
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_marginLeft="2dp"

            android:background="@drawable/redonecorner"
            android:layout_height="22dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:src="@drawable/clode5"></ImageView></LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Briyani Chinese"
        android:textColor="#8B8000"
        android:textSize="11sp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs."
                    android:textSize="18dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:textSize="18dp"
android:id="@+id/price"
            android:textStyle="bold"></TextView></LinearLayout>
        <ImageView
            android:layout_width="80dp"
            android:background="@drawable/rating7"
            android:layout_height="15dp"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white8"
    android:elevation="10dp"
    android:layout_marginTop="8dp"
    android:padding="1dp"
    android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_margin="3dp"
android:id="@+id/additem"
            android:src="@drawable/plus1"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:textSize="16dp"
            android:id="@+id/quantity"
            android:textStyle="bold"></TextView>
            <ImageView
                android:layout_width="18dp"
                android:layout_margin="3dp"
                android:id="@+id/removeitem"
                android:layout_height="22dp"
                android:src="@drawable/minus1"></ImageView>
</LinearLayout>

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="30dp"
            android:elevation="10dp"

            android:background="@drawable/designc">

            <TextView
                android:layout_width="wrap_content"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="   Buy Now    "
                android:id="@+id/cartordernow"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>