<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="400dp"
            android:layout_height="190dp"
            android:background="@drawable/back78"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="            Welcome Back!!"
                android:layout_margin="30dp"
                android:textColor="#cc0000"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="22dp"></TextView>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/spicy6"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:background="@drawable/green">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="@drawable/contact"></ImageView>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Email                                               "
               android:id="@+id/name1"
             android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_margin="2dp"></EditText>
        </LinearLayout> <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:elevation="20dp"
        android:background="@drawable/green">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:background="@drawable/password"></ImageView>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Password                              "
            android:textSize="13sp"
            android:inputType="textPassword"
          android:id="@+id/op59"
            android:layout_gravity="center"
            android:layout_margin="2dp"></EditText>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="3dp"
            android:layout_gravity="center"
            android:id="@+id/eyeicon"></ImageView>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pass3t"
            android:text="Forget Password?"
            android:textColor="#D26466"
            android:textSize="12sp"
            android:layout_gravity="center"></TextView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Login"
            android:textAllCaps="false"
            android:id="@+id/login3"

            android:layout_gravity="center"
            android:layout_margin="30dp"
            android:background="@drawable/darkgreen"
            android:textColor="@color/white"
            android:textSize="14dp"></androidx.appcompat.widget.AppCompatButton>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="#D26466"
                android:layout_margin="10dp"
                android:textSize="13sp"
                android:layout_gravity="center"></TextView><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#CC0000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"></TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>