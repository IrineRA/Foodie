<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"


    android:layout_centerInParent="true"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/white56"
        >



        <ImageView
            android:layout_width="280dp"
            android:layout_height="200dp"

            android:id="@+id/foodimg"
            android:src="@drawable/m121"></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/foodimg"
            android:text="AMBUR BRIYANI "
            android:layout_marginLeft="12dp"
            android:id="@+id/foodname"
            android:textSize="19dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Briyani Chinese"
            android:layout_below="@id/foodname"
            android:layout_marginLeft="12dp"
            android:id="@+id/countryname"
            android:textColor="#8B8000"
            android:textSize="13sp"></TextView>



        <ImageView
            android:layout_width="20dp"
            android:layout_below="@id/countryname"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/timer1"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="50-60 min"
            android:id="@+id/minutes"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/countryname"
            android:textColor="#008000"
            android:textSize="12sp"></TextView>
        <TextView
            android:id="@+id/b51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs. 300    "
            android:layout_below="@id/minutes"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"

            android:textStyle="bold"></TextView>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs. 200"
            android:id="@+id/price"
            android:layout_below="@id/minutes"
            android:layout_marginLeft="80dp"

            android:textSize="18sp"
            android:textStyle="bold"></TextView>


        <ImageView
            android:id="@+id/ratings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/foodimg"
            android:layout_marginLeft="180dp"
            android:src="@drawable/r4"></ImageView>


        <TextView
            android:id="@+id/ordernow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/red"
            android:elevation="2dp"
            android:padding="4dp"
            android:text="    ORDER NOW  "
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>
</androidx.cardview.widget.CardView>